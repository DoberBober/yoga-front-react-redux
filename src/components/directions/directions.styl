.directions
	background url('directionsBg.png') -850px top no-repeat

.directions__container
	max-width 950px

.directions__list
	padding 0 20px

.directionsItem
	margin-top 30px

.directionsItem__img
	display block
	width 100%
	object-fit cover

.directionsItem__wrapper
	position relative
	padding 17px 63px 17px 20px
	background #fff

.directionsItem__title
	margin 0 0 7px
	font-weight 700
	font-size 12px
	color var(--purple)

.directionsItem__time
	p
		margin 7px 0 8px
		font-size 10px
		color var(--purple)

.directionsItem__trainer
	font-weight 500
	font-size 10px
	color var(--pink)

	span
		display block

.directionsItem__link
	position absolute
	right 0
	top 0
	width 43px
	height 100%
	display flex
	align-items center
	justify-content center
	background var(--purple)
	transition .25s

	&:hover
		background var(--pink)

.directions__more
	display none

@media (min-width: 720px)
	.directions
		background-position left center
		background-size cover

	.directions__list
		display grid
		grid-template-columns 40% 60%
		grid-template-rows 1fr 1fr min-content
		grid-column-gap 25px
		grid-row-gap 25px

	.directions__list--page
		grid-template-rows 1fr 1fr

	.directionsItem
		margin-top 0

		&:first-child
			grid-row 1/-1
			display flex
			flex-direction column

		&:nth-child(n+2)
			display flex

			.directionsItem__img
				width 40%

	.directionsItem__wrapper
		flex-grow 1
		display flex
		flex-direction column
		justify-content center

	.directions__more
		display flex
		height 32px
		justify-content center
		align-items center
		font-size 12px
		color var(--purple)
		text-decoration none
		background #fff
		box-shadow 0px 4px 25px rgba(142, 128, 169, 0.2)
		transition .25s

		&:hover
			background var(--purple)
			color #fff

	.directionsItem__title
		font-size 16px

	.directionsItem__time
		p
			font-size 12px

	.directionsItem__trainer
		font-size 12px

@media (min-width: 1024px)
	.directions--section
		height 100vh
		display flex
		align-items center

	.directions__more
		height 48px
